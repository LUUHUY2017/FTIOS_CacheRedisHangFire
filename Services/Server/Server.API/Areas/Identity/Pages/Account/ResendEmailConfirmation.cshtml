@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
} 

<div class="page-content">

    <!-- Main content -->
    <div class="content-wrapper">

        <!-- Inner content -->
        <div class="content-inner">

            <!-- Content area -->
            <div class="content d-flex justify-content-center align-items-center">

                <!-- Login card -->
                <form class="login-form  needs-validation" novalidate method="post">

                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                    <img src="~/assets/images/logo_icon.png" class="h-48px" alt="">
                                </div>
                                <h3 class="mb-0"><b>Gửi lại email xác thực tài khoản</b></h3>
                                <span class="d-block text-muted">Vui lòng nhập email của bạn bên dưới </span>
                            </div>
                            <span class="text-danger  "><div asp-validation-summary="All" class="text-danger"></div></span>
                            <p>@Html.ValidationSummary()  </p>
                            <p>@ViewData["Message"]</p>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <div class="form-control-feedback form-control-feedback-start">
                                    <input asp-for="Input.Email" class="form-control" placeholder="nhập địa chỉ email" required />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <div class="form-control-feedback-icon">
                                        <i class="ph-user-circle text-muted"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100">Nhận mật khẩu</button>
                            </div>

                            <div class="mb-3">
                                <a href="~/Account/Login" class="ms-auto">Đăng nhập</a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- /login card -->

            </div>
            <!-- /content area -->

        </div>
        <!-- /inner content -->

    </div>
    <!-- /main content -->

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
