                                <div class="text-end">
                                    <button type="button" class="btn btn-primary" v-on:click="onSubmitSyncAttAgain()">Lưu dữ liệu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("/Views/Shared/Components/_FooterPartial.cshtml")
</div>

