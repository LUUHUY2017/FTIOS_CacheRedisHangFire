                                <div class="col-lg-7">
                                    <input type="text" class="form-control" v-model="item.password ">
                                    <div class="invalid-feedback">Vui lòng nhập mật khẩu kết nối</div>
                                    <div class="valid-feedback"> </div>
                                </div>
                            </div>
