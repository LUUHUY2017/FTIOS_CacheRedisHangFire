<script>
    $(document).ready(function () {
        $('#FilterOrgainization').on("change", function () {
            _timeConfig.filter.organizationId = $(this).val();
            _timeConfig.loadData();
        });
    });
    var _timeConfig = new Vue({
        el: '#webui_timeConfig',
        components: {
            'BootstrapTable': BootstrapTable
        },
        data: {
            data: {},
            item: {},
            column: [],
            options: {
                search: true,
                pagination: true,
                showExtendedPagination: true,
                showExport: false,
                sortable: true,
                groupBy: true,
                paginationHAlign: 'right',
                paginationDetailHAlign: 'right',
                pageSize: 10,
                pageList: [10, 25, 50, 100, 200],
            },
            object: {
                dateNow: formatDateTime(new Date()),
                form_tile: '',
                editAction: false,
                infoAction: false,
                bearerAuthorization: {
                    headers: { Authorization: `Bearer @Model`, 'Content-Type': 'application/json' }
                }
            },
            filter: {
                organizationId: null,
            },
            combobox: { schools: [], },
        },
        methods: {
            loadData() {
                $('.loader').show();
                axios.get('/api/v1/TimeConfig/GetFirstOrDefault?orgId=' + this.filter.organizationId, this.object.bearerAuthorization).then(response => {
                    if (response.request.responseURL.includes('~/Account/Login')) {
                        window.location = window.location.href;
                    }

                    if (response.data.succeeded) {
                        //this.data = response.data.data;
                        this.item = response.data.data || {};

                    }
                    else {
                        alertify.notify(response.data.message, 'error', 6, function () { });
                    }

                    $('.loader').delay(100).hide(0);
                }).catch(error => {
                    $('.loader').delay(100).hide(0);
                });
            },
            onSaveData() {
                console.log(this.item);
                if (!validateForm("#FormAddEdit"))
                    return true;
                $('.loader').show();
                axios.post('/api/v1/TimeConfig/AddOrEdit', this.item, this.object.bearerAuthorization).then(response => {
                    if (response.request.responseURL.includes('~/Account/Login')) {
                        window.location = window.location.href;
                    }

                    if (response.data.succeeded) {
                        alertify.success("Thành công");
                    }
                    else {
                        alertify.notify(response.data.message, 'error', 6, function () { });
                    }

                    $('.loader').delay(100).hide(0);
                }).catch(error => {
                    console.log(error);
                    $('.loader').delay(100).hide(0);
                });
            },
            loadCombox() {
                axios.get('/api/v1/Organization/GetForUser', this.object.config).then(response => {
                    if (response.request.responseURL.includes('Auth/Login')) {
                        window.location = window.location.href;
                    }
                    this.combobox.schools = response.data.data;
                    $('#FilterOrganization').val(this.combobox.schools.length > 0 ? this.combobox.schools[0].id : null).trigger('change');
                    this.filter.organizationId = this.combobox.schools[0].id;
                    this.loadData();
                }).catch(error => {
                    console.warn(error);
                });
            },
        },
        mounted() {
            this.loadCombox();
            //this.loadData();
        },
    })
</script>

