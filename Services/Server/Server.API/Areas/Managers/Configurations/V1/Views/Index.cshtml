@{
    ViewData["Title"] = "Cấu hình";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}
<div class="content-wrapper" id="webui">
    <!-- Inner content -->
    <div class="content-inner">
        <div class="content">
            <div class="card">
                <div class="card-body">
                    @{
                        string tab = Context.Request.Query["tab"].ToString().ToLower();
                        if (string.IsNullOrEmpty(tab))
                            tab = "cauhinhthoigian";

                        string tab_cauhinhthoigian = "";
                        if (tab == "cauhinhthoigian")
                            tab_cauhinhthoigian = "active";

                        string tab_thoigiandiemdanh = "";
                        if (tab == "thoigiandiemdanh")
                            tab_thoigiandiemdanh = "active";
                        // <li class="nav-item">
                        //     <a href="@Url.Action("index", new { tab="thoigiandiemdanh" })" class="nav-link @tab_thoigiandiemdanh">
                        //         <i class="ph-house m-2"></i>
                        //         Trường học
                        //     </a>
                        // </li>
                        // <div class="tab-pane fade mt-1 show @tab_thoigiandiemdanh" role="tabpanel">
                        //     @if (tab == "thoigiandiemdanh")
                        //     {
                        //         <div class="accordion" id="tab_thoigiandiemdanh">
                        //             @await Html.PartialAsync("/Areas/Managers/Configurations/V1/Views/SchoolConfig.cshtml")
                        //         </div>
                        //     }
                        // </div>

                    }
                    <ul class="nav nav-tabs nav-tabs-highlight">
                        <li class="nav-item">
                            <a href="@Url.Action("index", new { tab="cauhinhthoigian" })" class="nav-link @tab_cauhinhthoigian">
                                <i class="ph-house m-2"></i>
                                Thời gian điểm danh
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("index", new { tab="thoigiandiemdanh" })" class="nav-link @tab_thoigiandiemdanh">
                                <i class="ph-house m-2"></i>
                                Thời gian điểm danh
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane fade mt-1 show @tab_cauhinhthoigian" role="tabpanel">
                            @if (tab == "cauhinhthoigian")
                            {
                                <div class="accordion" id="tab_cauhinhthoigian">
                                    @await Html.PartialAsync("/Areas/Managers/Configurations/V1/Views/TimeConfig.cshtml")
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade mt-1 show @tab_thoigiandiemdanh" role="tabpanel">
                            @if (tab == "thoigiandiemdanh")
                            {
                                <div class="accordion" id="tab_thoigiandiemdanh">
                                    @await Html.PartialAsync("/Areas/Managers/Configurations/V1/Views/RollCallTimeConfig.cshtml")
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

